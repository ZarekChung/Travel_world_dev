    // always pass csrf tokens on ajax calls
    $.ajaxSetup({
        headers: { 'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content') }
    });
});
//default onload
google.maps.event.addDomListener(window, 'load', function() {
    initialize(<%= raw @spots.to_json %>)
});

</script>



